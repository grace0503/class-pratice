class Dog(Animal):
    def __init__(self,species,feet,gender,name):
        Animal.__init__(self,species,feet,gender) 
        self.name = name
        
    def show_name(self):
        print('Hi , my name is {0} .'.format(self.name))
animal_2=Dog('dog',4,'male','puppy')
animal_2.show_name()

