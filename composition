class Farm():
    def __init__(self,name,location):
        self.name = name
        self.location = location
    def getName(self):
        return self.name
    def getLocation(self):
        return self.location
        
class Animal():
    def __init__(self,species,feet,gender):
        self.species = species
        self.feet = feet
        self.gender = gender
        self.farm = Farm('happy farm','tainan')
        print(self.species+' lives in the '+self.farm.getName()+' and which locates in '+self.farm.getLocation()+'.')
animal = Animal('dog',4,'male')


